# ==============================================================================
# APP & ENVIRONMENT
# ==============================================================================
# Environment: development, production
NODE_ENV=development

# Base URLs for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=http://localhost:3000
NEXT_PUBLIC_APP_BASE_HOST=localhost:3000
NEXT_PUBLIC_WEBHOOK_BASE_HOST=https://localhost:3000
NEXT_PUBLIC_WEBHOOK_BASE_URL=localhost:3000

# Secret used to encrypt session data (generate with `openssl rand -base64 32`)
NEXTAUTH_SECRET=

# ==============================================================================
# DATABASE (Prisma)
# ==============================================================================
# Connection URLs for your PostgreSQL database
POSTGRES_PRISMA_URL="postgresql://user:password@host:port/database?sslmode=require"
POSTGRES_PRISMA_URL_NON_POOLING="postgresql://user:password@host:port/database?sslmode=require"

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Hanko - Passkey authentication
# Get keys: https://docs.hanko.io/passkey-api/reference/credentials/list-credentials
HANKO_API_KEY=
NEXT_PUBLIC_HANKO_TENANT_ID=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================================================
# EMAIL (Resend)
# ==============================================================================
# API key for sending emails via Resend
RESEND_API_KEY=re_123456789

# Default sender address
EMAIL_FROM="Papermark <hello@papermark.io>"

# Secret for generating unsubscribe tokens
NEXT_PRIVATE_UNSUBSCRIBE_JWT_SECRET=

# ==============================================================================
# STORAGE
# ==============================================================================
# Storage transport: "s3" or "vercel"
NEXT_PUBLIC_UPLOAD_TRANSPORT=s3

# S3 Configuration (Required if transport is s3)
# Endpoint can be AWS S3 or compatible (e.g., Google Cloud Storage, MinIO)
NEXT_PRIVATE_UPLOAD_ENDPOINT=https://storage.googleapis.com
NEXT_PRIVATE_UPLOAD_REGION=auto
NEXT_PRIVATE_UPLOAD_BUCKET=your-bucket-name
NEXT_PRIVATE_UPLOAD_ACCESS_KEY_ID=
NEXT_PRIVATE_UPLOAD_SECRET_ACCESS_KEY=

# Cloudfront Configuration (Optional, for S3)
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_DOMAIN=
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_KEY_ID=
NEXT_PRIVATE_UPLOAD_DISTRIBUTION_KEY_CONTENTS=

# Vercel Blob Configuration (Required if transport is vercel)
BLOB_READ_WRITE_TOKEN=

# ==============================================================================
# AI & LLM
# ==============================================================================
# OpenAI Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-...

# ==============================================================================
# ANALYTICS (Tinybird)
# ==============================================================================
# Tinybird for high-performance analytics
TINYBIRD_BASE_URL=https://api.europe-west2.gcp.tinybird.co
TINYBIRD_TOKEN=

# ==============================================================================
# BACKGROUND JOBS & QUEUES
# ==============================================================================
# Trigger.dev - Background jobs
TRIGGER_API_URL=https://api.trigger.dev
TRIGGER_SECRET_KEY=tr_...
TRIGGER_PROJECT=proj_...

# Upstash QStash - Message queue
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# ==============================================================================
# REDIS (Upstash)
# ==============================================================================
# General Redis instance
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Redis Locker (for handling file uploads/locks)
UPSTASH_REDIS_REST_LOCKER_URL=
UPSTASH_REDIS_REST_LOCKER_TOKEN=

# ==============================================================================
# SLACK INTEGRATION
# ==============================================================================
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_INTEGRATION_ID=slack
# URL for installing the Slack app
SLACK_APP_INSTALL_URL=
# Key for encrypting Slack tokens
NEXT_PRIVATE_SLACK_ENCRYPTION_KEY=

# ==============================================================================
# SECURITY & INTERNAL
# ==============================================================================
# Internal API Key for securing cron jobs and internal routes
INTERNAL_API_KEY=

# Token for on-demand ISR revalidation
REVALIDATE_TOKEN=

# Secret for verification URLs
NEXT_PRIVATE_VERIFICATION_SECRET=

# Key for encrypting document passwords
NEXT_PRIVATE_DOCUMENT_PASSWORD_KEY=

# ==============================================================================
# VERCEL PLATFORM (Optional)
# ==============================================================================
# Used for custom domains integration
PROJECT_ID_VERCEL=
TEAM_ID_VERCEL=
AUTH_BEARER_TOKEN=

# ==============================================================================
# FILE CONVERSION (Self-hosted Optional)
# ==============================================================================
# Only required if self-hosting conversion microservices
NEXT_PRIVATE_CONVERSION_BASE_URL=http://localhost:3001
NEXT_PRIVATE_INTERNAL_AUTH_TOKEN=
NEXT_PRIVATE_CONVERT_API_URL=http://localhost:3000/api/convert
NEXT_PRIVATE_CONVERT_API_KEY=
